---
import "../styles/global.css";
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>3636 Brand Standards</title>
    </head>
    <body>
        <header>
            <img src="star.svg" width="100" height="100" alt="star" />

            <h1>
                Generals
                <em>Brand Standard</em>
            </h1>
        </header>

        <main>
            <section>
                <h1>Typefaces</h1>

                <div id="typefaces">
                    <div id="typeface-loos">
                        <h2>Loos Extrabold</h2>
                        <p>For primary headings and accent text.</p>
                    </div>
                    <div id="typeface-itc-avant-garde-gothic-pro">
                        <h2>ITC Avant Garde Gothic Pro</h2>
                        <p>For secondary headings.</p>
                    </div>
                    <div id="typeface-montserrat">
                        <h2>Montserrat</h2>
                        <p>For body text.</p>
                    </div>
                </div>
            </section>

            <section>
                <h1>Colors</h1>

                <div id="colors">
                    <div id="color-black">
                        <h2>Black</h2>
                        <span>#121212</span>
                    </div>
                    <div id="color-white">
                        <h2>White</h2>
                        <span>#ffffff</span>
                    </div>
                    <div id="color-blue">
                        <h2>Blue</h2>
                        <span>#283891</span>
                    </div>
                </div>
            </section>
        </main>

        <footer>
            <p>
                Â© Copyright 2024, <a href="https://frcteam3636.com">
                    Generals Robotics
                </a>
            </p>
        </footer>

        <script
            src="https://flackr.github.io/scroll-timeline/dist/scroll-timeline.js"
        ></script>
    </body>
</html>

<style>
    body {
        margin: 0 auto;
        width: 75ch;
        max-width: 100%;
    }

    @media screen and (max-width: 600px) {
        html {
            font-size: 12px;
        }
    }

    header {
        display: grid;
        place-content: center;

        height: 90dvh;
        margin-bottom: 10dvh;
        gap: 2.5vmin;
    }

    header img {
        position: fixed;
        top: 50%;
        left: 50%;
        z-index: -1;

        display: block;
        height: 20rem;
        max-height: 50vw;
        width: auto;
        margin: 0 auto;

        animation: background-star linear both;
        animation-timeline: scroll(block root);
        animation-duration: 1ms;
    }

    header h1 {
        text-align: center;

        font-size: 6rem;
        font-style: italic;
        font-weight: 1000;
        text-transform: uppercase;

        padding-top: min(20rem, 60vw);
    }

    header h1 em {
        display: block;

        font-size: 2rem;
        font-weight: 400;
        font-family: var(--font-subheading);
        text-transform: capitalize;

        text-decoration: var(--col-blue) underline;
    }

    section {
        padding: 4rem;
    }

    section h1 {
        font-size: 2rem;
        font-weight: 1000;
        text-transform: uppercase;

        margin-bottom: 2rem;
    }

    section p {
        font-size: 1.25rem;
    }

    #typefaces {
        display: flex;
        flex-wrap: wrap;
        padding: 2rem 0;
        gap: 3rem;
        text-align: center;
    }

    #typefaces > div {
        flex: 1 0 18rem;
    }

    #typefaces h2 {
        font-size: 2rem;
        font-weight: 400;
    }

    #typeface-loos h2 {
        font-family: "Loos";
        font-weight: 1000;
    }

    #typeface-itc-avant-garde-gothic-pro h2 {
        font-family: "ITC Avant Garde Gothic Pro";
    }

    #typeface-montserrat h2 {
        font-family: "Montserrat";
    }

    #colors {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1rem;
    }

    #colors > div {
        padding: 2rem;

        text-align: center;

        border: 4px solid currentColor;
        border-radius: 1rem;
    }

    #color-black {
        background-color: var(--col-black);
        color: var(--col-white);
    }

    #color-white {
        background-color: var(--col-white);
        color: var(--col-black);
    }

    #color-blue {
        background-color: var(--col-blue);
        color: var(--col-white);
    }

    footer {
        text-align: center;
        padding: 2rem;
    }

    @keyframes background-star {
        0% {
            zoom: 1;
            filter: brightness(1) sepia(1) hue-rotate(180deg);
            translate: -50% -100% 0;
        }
        25% {
            filter: brightness(0.25) sepia(1) hue-rotate(180deg);
        }
        100% {
            translate: -50% -60% 0;
            scale: 3.5;
            filter: brightness(0.25) sepia(1) hue-rotate(180deg) saturate(4)
                opacity(0.25);
            rotate: -17deg;
        }
    }
</style>
